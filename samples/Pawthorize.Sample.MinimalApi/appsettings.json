{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Pawthorize": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Pawthorize": {
    "RequireEmailVerification": false,
    "TokenDelivery": "Hybrid",
    "LoginIdentifier": "Email",
    "PasswordReset": {
      "BaseUrl": "http://localhost:5022",
      "ApplicationName": "Pawthorize Sample"
    },
    "Csrf": {
      "Enabled": true,
      "CookieName": "XSRF-TOKEN",
      "HeaderName": "X-XSRF-TOKEN",
      "TokenLifetimeMinutes": 10080
    },
    "RateLimiting": {
      "Enabled": true,
      "Strategy": "FixedWindow",
      "PartitionBy": "IpAddress",
      "Login": {
        "PermitLimit": 5,
        "WindowMinutes": 5
      },
      "Register": {
        "PermitLimit": 3,
        "WindowMinutes": 15
      },
      "PasswordReset": {
        "PermitLimit": 3,
        "WindowMinutes": 15
      },
      "Refresh": {
        "PermitLimit": 50,
        "WindowMinutes": 5
      },
      "OAuth": {
        "PermitLimit": 10,
        "WindowMinutes": 5
      }
    },
    "PasswordPolicy": {
      "MinLength": 8,
      "MaxLength": 128,
      "RequireUppercase": true,
      "RequireLowercase": true,
      "RequireDigit": true,
      "RequireSpecialChar": true,
      "BlockCommonPasswords": true,
      "SpecialCharacters": "!@#$%^&*()_+-=[]{}|;:,.<>?"
    },
    "AccountLockout": {
      "Enabled": true,
      "MaxFailedAttempts": 5,
      "LockoutMinutes": 30,
      "ResetOnSuccessfulLogin": true
    },
    "OAuth": {
      "AllowAutoRegistration": true,
      "StateTokenExpirationMinutes": 10,
      "UsePkce": true,
      "Providers": {
        "Google": {
          "Enabled": false,
          "ClientId": "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com",
          "ClientSecret": "YOUR_GOOGLE_CLIENT_SECRET",
          "RedirectUri": "http://localhost:5022/api/auth/oauth/google/callback",
          "Scopes": ["openid", "profile", "email"],
          "RequireVerifiedEmail": true
        },
        "Discord": {
          "Enabled": false,
          "ClientId": "YOUR_DISCORD_CLIENT_ID",
          "ClientSecret": "YOUR_DISCORD_CLIENT_SECRET",
          "RedirectUri": "http://localhost:5022/api/auth/oauth/discord/callback",
          "Scopes": ["identify", "email"],
          "RequireVerifiedEmail": true
        }
      }
    }
  },
  "Jwt": {
    "Secret": "this-is-a-super-secret-key-for-jwt-tokens-min-32-chars",
    "Issuer": "PawthorizeSample",
    "Audience": "PawthorizeSample",
    "AccessTokenLifetimeMinutes": 15,
    "RefreshTokenLifetimeDays": 7
  }
}
