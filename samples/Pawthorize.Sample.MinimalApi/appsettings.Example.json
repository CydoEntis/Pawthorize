{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Pawthorize": {
    "RequireEmailVerification": false,
    "TokenDelivery": "Hybrid",
    "LoginIdentifier": "Email",
    "Csrf": {
      "Enabled": true,
      "CookieName": "XSRF-TOKEN",
      "HeaderName": "X-XSRF-TOKEN",
      "TokenLifetimeMinutes": 10080
    },
    "EmailVerification": {
      "BaseUrl": "https://yourapp.com",
      "TokenLifetimeMinutes": 1440
    },
    "PasswordReset": {
      "TokenLifetimeMinutes": 60
    },
    "OAuth": {
      "AllowAutoRegistration": true,
      "StateTokenExpirationMinutes": 10,
      "UsePkce": true,
      "Providers": {
        "Google": {
          "Enabled": true,
          "ClientId": "123456789-abcdefghijklmnop.apps.googleusercontent.com",
          "ClientSecret": "GOCSPX-your_client_secret_here",
          "RedirectUri": "https://yourapp.com/api/auth/oauth/google/callback",
          "Scopes": ["openid", "profile", "email"],
          "RequireVerifiedEmail": true
        },
        "Discord": {
          "Enabled": true,
          "ClientId": "1234567890123456789",
          "ClientSecret": "your_discord_client_secret_here",
          "RedirectUri": "https://yourapp.com/api/auth/oauth/discord/callback",
          "Scopes": ["identify", "email"],
          "RequireVerifiedEmail": true
        }
      }
    }
  },
  "Jwt": {
    "Secret": "your-super-secret-jwt-key-at-least-32-characters-long",
    "Issuer": "YourApp",
    "Audience": "YourApp.Users",
    "AccessTokenLifetimeMinutes": 15,
    "RefreshTokenLifetimeDays": 7
  }
}
